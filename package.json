{
  "name": "loopback4-dynamic-datasource",
  "version": "1.0.2",
  "description": "An extension to connect to dynamic datasource in loopback 4 application",
  "keywords": [
    "loopback-extension",
    "loopback"
  ],
  "main": "src/index.ts",
  "engines": {
    "node": ">=10.16"
  },
  "type": "module",
  "scripts": {
    "build": "lb-tsc",
    "build:watch": "lb-tsc --watch",
    "lint": "npm run eslint && npm run prettier:check",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix",
    "pretest": "npm run rebuild",
    "test": "echo \"No test specified\"",
    "posttest": "npm run lint",
    "test:dev": "lb-mocha --allow-console-logs dist/__tests__/**/*.js && npm run posttest",
    "clean": "lb-clean dist *.tsbuildinfo .eslintcache",
    "rebuild": "npm run clean && npm run build",
    "prepublishOnly": "npm run test && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rigo9412/loopback4-dynamic-datasource.git"
  },
  "author": "",
  "license": "MIT",
  "files": [
    "README.md",
    "src",
    "!*/__tests__"
  ],
  "peerDependencies": {
    "@loopback/core": ">=3.1.2"
  },
  "dependencies": {
    "@loopback/repository": "^4.1.2",
    "@loopback/rest": "^11.1.2",
    "tslib": "^2.0.0"
  },
  "devDependencies": {
    "@loopback/build": "^6.4.0",
    "source-map-support": "^0.5.19",
    "@loopback/core": "^3.1.2",
    "@loopback/testlab": "^3.4.0",
    "@types/node": "^10.17.59",
    "@loopback/eslint-config": "^10.2.0",
    "eslint": "^7.25.0",
    "typescript": "~4.2.4"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
